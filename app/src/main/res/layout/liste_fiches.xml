<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gbernardeau.gestionstock.IHM.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.gbernardeau.ppe.MainActivity">

        <LinearLayout
            android:layout_width="1264dp"
            android:layout_height="647dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="9dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.10" />

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.10"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/Accueilbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.34"
                        android:text="Accueil" />
                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3" />

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/CreateFiche"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Créer une fiche" />

                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ToutLesArticles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tout les articles" />

                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="1276dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.18" />

                        <EditText
                            android:id="@+id/Search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.14"
                            android:ems="10"
                            android:inputType="textPersonName" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.27" />

                        <Button
                            android:id="@+id/bSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.11"
                            android:text="Rechercher" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.28" />

                        <Button
                            android:id="@+id/bTri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.07"
                            android:text="Tri" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.18" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="89dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.14"
                            android:background="@drawable/drawable"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/code"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.23"
                                android:text="Code"
                                android:textAlignment="center"
                                android:textSize="30dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="293dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.40"
                            android:background="@drawable/drawable"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Designation"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.03"
                                android:text="Désignation"
                                android:textAlignment="center"
                                android:textSize="30dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="216dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.14"
                            android:background="@drawable/drawable"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Famille"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.02"
                                android:text="Famille"
                                android:textAlignment="center"
                                android:textSize="30dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="265dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.17"
                            android:background="@drawable/drawable"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Emplacement"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.02"
                                android:text="Emplacement"
                                android:textAlignment="center"
                                android:textSize="30dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.10"
                            android:background="@drawable/drawable"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Stock"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.02"
                                android:text="Stock"
                                android:textAlignment="center"
                                android:textSize="30dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1265dp"
                        android:layout_height="466dp"
                        android:orientation="horizontal">

                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="11.03" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
